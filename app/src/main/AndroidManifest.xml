<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alisafarzadeh.twittermvvm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/twitter"
        android:label="شبکه اجتماعی"
        android:networkSecurityConfig="@xml/network_sequrity"
        android:roundIcon="@drawable/twitterround"
        android:supportsRtl="true"
        android:theme="@style/Theme.TwitterMVVM"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustPan|adjustResize">
        <activity
            android:name=".activity.PostActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SendMessageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.LoginSignupActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>